
<div class="fluid-container">
  <div class="bg-white content-panel">
    <h1>Consignments added yesterday</h1>
    <hr/>

    <% if @yesterdayJobs.count > 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Job Number</th>
          <th>Company Name</th>
          <th>Reference</th>
          <th>Parcels</th>
          <th>Pallets</th>
          <th>Bundles</th>
          <th>Address 1</th>
          <th>Address 2</th>
          <th>Adrdres 3</th>
          <th>Date Added</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @yesterdayJobs.each do |job| %>
          <tr>
            <td><%= job.id %></td>
            <td><%= link_to job.customer.company_name , job.customer%></td>
            <td class="center-table"><%= job.reference %></td>
            <td class="center-table"><%= job.parcels %></td>
            <td class="center-table"><%= job.pallets %></td>
            <td class="center-table"><%= job.bundles %></td>
            <td><%= job.customer.address1 %></td>
            <td><%= job.customer.address2 %></td>
            <td><%= job.customer.address3 %></td>
            <td><%= job.created_at.to_date.strftime('%d-%m-%y') %></td>
            <td><%= link_to 'Show', job %></td>
            <td><%= link_to 'Edit', edit_job_path(job) %></td>
            <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row">
          <div id="pagination">
            <%= will_paginate @yesterdayJobs %>
          </div>
        </div>
    <% else %>
    	<p>No Consignments added yesterday</p>
    <% end %>

    <br>
      </div>
</div>
