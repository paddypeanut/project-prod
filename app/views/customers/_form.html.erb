<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="format-form">
  <div class="field">
    <%= form.label :customer_code %>
    <%= form.text_field :customer_code %>
  </div>

  <div class="field">
    <%= form.label :company_name %>
    <%= form.text_field :company_name %>
  </div>

  <div class="field">
    <%= form.label :address1 %>
    <%= form.text_field :address1 %>
  </div>

  <div class="field">
    <%= form.label :address2 %>
    <%= form.text_field :address2 %>
  </div>

  <div class="field">
    <%= form.label :address3 %>
    <%= form.text_field :address3 %>
  </div>

  <div class="field">
    <%= form.label :eircode %>
    <%= form.text_field :eircode %>
  </div>

  <div class="field hide">
    <%= form.label :user_id %>
    <input type="text" id="user_id" name="customer[user_id]" value="<%= current_user.id %>">
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  <br/>
</div>
<% end %>
