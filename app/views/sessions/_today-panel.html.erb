<div id="today-panel">
		<div class="row bg-white home-panel">
			<div class="row-100">
				<h3>Consignments added today</h3>
				<hr/>
			</div>
			<% if @todayJobs.count > 0 %>	
				
					<table class="table table-striped">
					 	<thead>
					        <tr>
					          <th>Job Number</th>
					          <th>Company Name</th>
					          <th>Reference</th>
					          <th>Parcels</th>
					          <th>Pallets</th>
					          <th>Bundles</th>
					          <th>Adrress 1</th>
					          <th>Adrress 2</th>
					          <th>Adrress 3</th>
					          <th>Date</th>
					          <th colspan="3"></th>
					        </tr>
					      </thead>

		  				<tbody>
		  
						<% @todayJobs.each do |job|%>
						      <tr>
						        <td><%= job.id %></td>
						        <td><%= link_to job.customer.company_name, job.customer %></td>
						        <td class="center-table"><%= job.reference %></td>
						        <td class="center-table"><%= job.parcels %></td>
						        <td class="center-table"><%= job.pallets %></td>
						        <td class="center-table"><%= job.bundles %></td>
						        <td><%= job.customer.address1 %></td>
						        <td><%= job.customer.address2 %></td>
						        <td><%= job.customer.address3 %></td>
						        <td><%= job.created_at.to_date.strftime('%d-%m-%y') %></td>
						        <td><%= link_to 'Show', job %></td>
						        <td><%= link_to 'Edit', edit_job_path(job) %></td>
						        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
						      </tr>
						      <% end %>
				  		</tbody>
					</table>
				
			<% else %>
				<p>No Consigments added toady</p>
			<% end %>
			<hr/>
			<%= link_to 'Add New Consigment',new_job_path %>
		</div>
	</div>